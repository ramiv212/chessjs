<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="styles.css">
        <link href='https://fonts.googleapis.com/css?family=Cinzel Decorative' rel='stylesheet'>
    </head>
    <body>
        <!--[if lt IE 7]>
            <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
    
        <dialog id="pawnUpdate">
            <form method="dialog">
              <p>
                <label>What piece would you like to upgrade to?
                  <select>
                    <option value="default">Chooseâ€¦</option>
                    <option>Queen</option>
                    <option>Bishop</option>
                    <option>Rook</option>
                    <option>Knight</option>
                  </select>
                </label>
              </p>
              <div>
                <button value="cancel">Cancel</button>
                <button id="confirmBtn" value="default">Confirm</button>
              </div>
            </form>
          </dialog>
          <output></output>
        
        <div id="main-div">
            <div id="main-hud-div">
                <div id="title"><h1>HTML Chess</h1></div>
                <div id="player-two-hud">
                    <h1 style="line-height:28px;">Player Two <br><span style="font-size: 70%;">Black <span id="player-two-turn"></span></span></h1>
                    <div id="dead-black-pieces"></div>
                </div>
                <div id="player-one-hud">
                    <h1 style="line-height:28px;">Player One <br><span style="font-size: 70%;">White <span id="player-one-turn"></span></span></h1>
                    <div id="dead-white-pieces"></div>
                </div>
            </div>

            <div style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center;" id="app"></div>

            <div id="main-chat-div">
              <div id="chat-title"><h2>Chat</h2></div>
              <textarea id="chat-box" name="chat"></textarea>
              <button>Send</button>
            </div>
        </div>
        
        <hidden id="gameID"><%= locals.gameID %></hidden>
        <script src="./common/chess.js" async defer></script>
    </body>
</html>